# Example Terraform variables file
# Copy this to terraform.tfvars and customize the values

# Required variables
resource_group_name = "your-resource-group-name"
virtual_network_name = "OPNsenseWAF-VNET"

# Optional variables with defaults from ARM template
location = null  # Uses resource group location if not specified
scenario_option = "TwoNics"  # or "Active-Active" for HA deployment
virtual_machine_name = "OPNsenseWAF"
virtual_machine_size = "Standard_B2s"

# Network configuration
existing_virtual_network = "new"  # Set to existing VNet name to use existing
vnet_address = ["10.0.0.0/16"]
untrusted_subnet_cidr = "10.0.1.0/24"
trusted_subnet_cidr = "10.0.2.0/24"

# Windows test VM (optional)
deploy_windows = false
deploy_windows_subnet = "10.0.3.0/24"
win_username = "azureuser"
# win_password = "YourSecurePassword123!"  # Required if deploy_windows = true

# Public IP configuration
public_ip_address_sku = "Standard"

# OPNsense configuration
opn_script_uri = "https://raw.githubusercontent.com/dmauser/azure-virtualwan/main/natvpn-over-er/opnsense/"
shell_script_name = "configureopnsense.sh"
opn_version = "24.1"
wa_linux_version = "2.9.1.1"

# If using existing VNet, uncomment and set these:
# existing_untrusted_subnet_name = "existing-untrusted-subnet"
# existing_trusted_subnet_name = "existing-trusted-subnet"
# existing_windows_subnet = "existing-windows-subnet"  # Only if deploy_windows = true
